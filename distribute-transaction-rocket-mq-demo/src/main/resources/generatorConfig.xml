<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="MysqlTables" targetRuntime="MyBatis3">
        <jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
                        connectionURL="jdbc:mysql://192.168.3.137:3306/xa_1?serverTimezone=Asia/Shanghai&amp;useSSL=false"
                        userId="root"
                        password="123456">
            <property name="nullCatalogMeansCurrent" value="true"/>
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <javaModelGenerator targetPackage="com.xlh.distribute.transaction.demo.rocketmq.msg.db2.model"
                            targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <sqlMapGenerator targetPackage="mybatis" targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <javaClientGenerator type="XMLMAPPER" targetPackage="com.xlh.distribute.transaction.demo.rocketmq.msg.db2.dao"
                             targetProject="src/main/resources">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <table schema="xa_1" tableName="payment_msg" domainObjectName="PaymentMsg">
            <columnOverride column="status" jdbcType="TINYINT" javaType="Integer"/>

        </table>

    </context>
</generatorConfiguration>
